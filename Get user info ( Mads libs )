    char cloth[10];
    char noun1[10];
    char city[10];
    printf("Enter an Adjective : ");
    scanf("%s", &adj);
    printf("Enter a Noun : ");
    scanf("%s", &noun);
    printf("Enter a Plural Noun : ");
    scanf("%s", &pnoun);
